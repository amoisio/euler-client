<Project Sdk="Microsoft.NET.Sdk">

  <ItemGroup>
    <ProjectReference Include="..\ProjectEuler.Client\ProjectEuler.Client.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <RootNamespace>ProjectEuler.Client.Cli</RootNamespace>
  </PropertyGroup>

  <Target Name="Rename" AfterTargets="Publish">
    <Move SourceFiles="$(PublishDir)\ProjectEuler.Client.Cli" DestinationFiles="$(PublishDir)\euler" />
    <Message Text="Renamed executable file in $(PublishDir)." Importance="high" />
  </Target>

</Project>
